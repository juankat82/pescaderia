<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="producto"
            type="com.juan.pescaderia.dataclasses.Product" />
    </data>
    <LinearLayout
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/edittext_layout"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:paddingHorizontal="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="normal|bold"
                android:elegantTextHeight="true"
                android:elevation="10sp"
                android:text='@{"PRODUCTO:  " +producto.nombre}'/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:paddingVertical="4dp"
                android:paddingHorizontal="5dp"
                android:textStyle="normal|bold"
                android:elegantTextHeight="true"
                android:elevation="10sp"
                android:text='@{"PRECIO: " +producto.precio}'/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:paddingVertical="4dp"
                android:paddingHorizontal="5dp"
                android:textStyle="normal|bold"
                android:elegantTextHeight="true"
                android:elevation="10sp"
                android:text='@{producto.peso_kg == false ? @string/por_unidad : @string/al_peso}'/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="2dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/cantidad_deseada_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:paddingHorizontal="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="normal|bold"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:lines="1"
                android:maxLength="12"
                android:elegantTextHeight="true"
                android:elevation="10sp"
                android:text="0"
                android:background="@drawable/edittext_layout"
                android:hint="@string/cantidad_deseada"/>
            <ImageButton
                android:id="@+id/boton_mas"
                android:layout_marginStart="25dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_layout"
                android:src="@drawable/arrow_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/boton_menos"
                android:src="@drawable/arrow_down"
                android:layout_gravity="center"
                android:background="@drawable/edittext_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/valor_total_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edittext_layout"
                android:paddingVertical="4dp"
                android:paddingHorizontal="5dp"
                android:layout_marginStart="10dp"
                android:lines="1"
                android:maxLength="8"
                android:maxLines="1"
                android:text="0.0"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textStyle="normal|bold"
                android:elegantTextHeight="true"
                android:elevation="10sp"/>

            <ImageButton
                android:id="@+id/add_to_order_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/edittext_layout"
                android:src="@drawable/ic_baseline_add_box_24" />
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/black" />

    </LinearLayout>
</layout>